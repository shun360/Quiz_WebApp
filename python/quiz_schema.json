{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PyJsonValidate",
    "description": "クイズセットのデータ構造定義",
    "type": "object",
    "properties" :{
        "Qid": {
            "type": "integer"
        },
        "title": {
            "type": "string"
        },
        "questions": {
            "type":"array",
            "required": ["no", "text", "choices", "correctAnswer", "explanation"],
            "properties": {
                "no": {
                    "type": "integer"
                },
                "text":{
                    "type":"string"
                },
                "choices":{
                    "type":"array"
                },
                "correctAnswer":{
                    "type": "integer"
                },
                "explanation":{
                    "type":"string"
                }
            }

        }
        
    }
}
