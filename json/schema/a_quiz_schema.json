{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PyJsonValidate",
    "description": "クイズ一問のデータ構造定義",
    "type": "object",
    "properties" :{
        "text":{
            "type":"string"
        },
        "choices":{
            "type":"array",
            "items": {
                "type":"string"
            }
        },
        "correctAnswer":{
            "type": "integer"
        },
        "explanation":{
            "type":"string"
        }
    },
    "required": ["text", "choices", "correctAnswer", "explanation"]
            

}
